rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - authenticated users can read/write their own profile ONLY
    match /users/{userId} {
      // Users can ONLY read and write their OWN profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Note: Cloud Functions use Admin SDK which bypasses these rules
    }

    // Config collection - public read for whitelists, admin write
    match /config/{configId} {
      // Allow anyone to read config (whitelists loaded at auth time)
      allow read: if true;
      // Only authenticated users can write (admin operations check in code)
      allow write: if request.auth != null;
    }

    // Access requests collection - create from anyone, admin manages via Cloud Functions
    match /access_requests/{requestId} {
      // Allow creating access requests (public form submissions)
      allow create: if true;
      // Read/update/delete: authenticated users only (admin check in Cloud Functions)
      // Cloud Functions use Admin SDK for approval/denial flow
      allow read, update, delete: if request.auth != null;
    }

    // Shortlinks collection - public read for redirects, controlled write
    match /shortlinks/{shortCode} {
      // Allow anyone to read shortlinks (for redirect lookups)
      allow read: if true;

      // Allow create/update/delete (admin via client bypass)
      allow create: if request.resource.data.keys().hasAll(['shortCode', 'destinationUrl', 'createdAt', 'isActive'])
                    && request.resource.data.destinationUrl is string
                    && request.resource.data.destinationUrl.size() <= 2000;

      // Allow click count updates
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
                      .hasOnly(['clicks', 'uniqueClicks', 'updatedAt', 'isActive', 'title', 'campaign', 'destinationUrl']);

      // Delete: authenticated users only (admin cleanup)
      allow delete: if request.auth != null;

      // Clicks subcollection
      match /clicks/{clickId} {
        allow read: if true;
        allow create: if request.resource.data.keys().hasAll(['timestamp']);
        // Delete: authenticated users only (admin cleanup)
        allow delete: if request.auth != null;
      }
    }

    // Journeys collection - UnityMAP canvas persistence (embedded model)
    match /journeys/{journeyId} {
      // Allow public read for shared journeys
      allow read: if true;

      // Allow create with validation
      allow create: if request.resource.data.keys().hasAll(['title', 'createdAt', 'status', 'nodes', 'edges'])
                    && request.resource.data.title is string
                    && request.resource.data.title.size() <= 200
                    && request.resource.data.nodes is list
                    && request.resource.data.edges is list;

      // Allow updates (for editing journey, publishing, status changes)
      // Note: Consider restricting to authenticated users in future
      allow update: if true;

      // Delete: authenticated users only
      allow delete: if request.auth != null;
    }

// ============================================================
    // NEW COLLECTIONS - Phase 1 Data Foundation (Dec 2025)
    // ============================================================

    // Rate limits collection - internal use for persistent rate limiting
    match /rate_limits/{limitId} {
      allow read: if true;
      allow write: if true;  // Cloud Functions manage this
    }

    // Contacts collection - canonical person records
    match /contacts/{contactId} {
      // Read/Write: authenticated users (admin check in app code)
      allow read, write: if request.auth != null;
    }

    // Leads collection - raw capture events
    match /leads/{leadId} {
      // Create: anyone can submit a lead (form submissions)
      allow create: if true;

      // Read: admin only
      allow read: if request.auth != null;

      // Update/Delete: admin or Cloud Functions
      allow update, delete: if request.auth != null;
    }

    // Trigger Rules collection - automation configuration
    match /triggerRules/{ruleId} {
      // Full access for authenticated users (admin check in app)
      allow read, write: if request.auth != null;
    }

    // Dedupe Log collection - deduplication tracking (TTL managed)
    match /dedupeLog/{key} {
      // Internal use only - Cloud Functions manage this
      allow read, write: if request.auth != null;
    }

    // Trigger Logs collection - audit trail
    match /triggerLogs/{logId} {
      // Read: authenticated (admin check in app)
      allow read: if request.auth != null;

      // Write: Cloud Functions only (via admin SDK)
      allow create: if request.auth != null;
      allow update, delete: if false;  // Immutable audit log
    }

    // Email Events collection - ESP webhook events
    match /emailEvents/{eventId} {
      // Read: authenticated
      allow read: if request.auth != null;

      // Write: Cloud Functions only (webhook handler)
      allow create, update: if request.auth != null;
      allow delete: if false;  // Preserve email history
    }

    // Articles collection - blog/content management (hybrid CMS)
    match /articles/{articleId} {
      // Public read for published articles
      allow read: if true;

      // Write: authenticated users (admin check in app)
      allow write: if request.auth != null;
    }

    // ============================================================
    // Link Archiver Collections (Pocket Alternative)
    // ============================================================

    // Vanity Slugs collection - custom short URLs for quick save
    match /vanitySlugs/{slug} {
      // Public read for slug lookups (used by VanitySavePage)
      allow read: if true;

      // Write: admin only (via Cloud Functions or authenticated admin)
      allow write: if request.auth != null;
    }

    // API Tokens collection - user API tokens for external integrations
    match /apiTokens/{tokenId} {
      // Read: token validation (public for quickSave, user's own tokens)
      allow read: if true;

      // Write: authenticated users can manage their own tokens
      allow write: if request.auth != null;
    }

    // Links collection - saved links/articles
    match /links/{linkId} {
      // Read: user can read their own links
      // Sharing queries use array-contains which Firestore validates against the query
      allow read: if request.auth != null;

      // Create: authenticated users can create links for themselves
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['url', 'userId', 'savedAt']);

      // Update: users can update their own links (including sharing/unsharing)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;

      // Delete: users can delete their own links
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Link Folders collection - link organization folders per user
    match /link_folders/{folderId} {
      // Read: authenticated users (queries filter by userId in app code)
      allow read: if request.auth != null;

      // Create: user can create folders for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Update/Delete: users can only modify their own folders
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // User Settings collection - user preferences and settings
    match /user_settings/{userId} {
      // Users can only read/write their own settings
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.data.userId == request.auth.uid;
    }

    // Notifications collection - in-app notifications
    match /notifications/{notificationId} {
      // Users can read their own notifications (by userId or userEmail)
      allow read: if request.auth != null
                  && (resource.data.userId == request.auth.uid
                      || resource.data.userEmail == request.auth.token.email);

      // Create: authenticated users can create notifications for others (sharing flow)
      allow create: if request.auth != null
                    && request.resource.data.keys().hasAll(['type', 'title', 'message', 'read', 'dismissed', 'createdAt']);

      // Update: users can update their own notifications (mark read, dismiss)
      allow update: if request.auth != null
                    && (resource.data.userId == request.auth.uid
                        || resource.data.userEmail == request.auth.token.email)
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['read', 'readAt', 'dismissed']);

      // Delete: users can delete their own notifications
      allow delete: if request.auth != null
                    && (resource.data.userId == request.auth.uid
                        || resource.data.userEmail == request.auth.token.email);
    }

    // Comments collection - unified comments for links, folders, canvases
    match /comments/{commentId} {
      // Read: authenticated users can read all comments
      // (visibility is managed by target access in app code)
      allow read: if request.auth != null;

      // Create: authenticated users can create comments
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.keys().hasAll(['targetType', 'targetId', 'authorId', 'content', 'createdAt'])
                    && request.resource.data.targetType in ['link', 'folder', 'capsule']
                    && request.resource.data.content is string
                    && request.resource.data.content.size() <= 2000;

      // Update: only author can update their own comments
      allow update: if request.auth != null
                    && resource.data.authorId == request.auth.uid
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['content', 'mentions', 'editedAt']);

      // Delete: author can delete their own comments
      allow delete: if request.auth != null
                    && resource.data.authorId == request.auth.uid;
    }

    // ============================================================
    // END NEW COLLECTIONS
    // ============================================================

    // Capsules collection - public read, controlled write
    match /capsules/{capsuleId} {
      // Allow anyone to read capsules (for shared links)
      allow read: if true;

      // Allow create with validation
      // BLOCKED: "Travel Memories" titles (runaway auto-save created 50K+ documents)
      allow create: if request.resource.data.keys().hasAll(['title', 'createdAt', 'isPublic'])
                    && request.resource.data.title is string
                    && request.resource.data.title.size() <= 200
                    && !request.resource.data.title.matches('.*[Tt]ravel [Mm]emories.*')
                    && !request.resource.data.title.matches('.*UK Travel.*');

      // Allow view count updates (anonymous increment)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount', 'updatedAt'])
                    && request.resource.data.viewCount == resource.data.viewCount + 1;

      // Allow owner to update their capsule (collaboration, visibility, content)
      allow update: if request.auth != null
                    && resource.data.ownerId == request.auth.uid;

      // Allow authenticated users to update capsules that have collaborators set up
      // Fine-grained permission checking (owner/editor/viewer) happens in app code
      // This rule enables collaboration while Firestore acts as a security backstop
      allow update: if request.auth != null
                    && 'collaborators' in resource.data
                    && resource.data.collaborators.size() > 0;

      // Allow authenticated users to update capsules without owner (legacy)
      allow update: if request.auth != null
                    && (!('ownerId' in resource.data) || resource.data.ownerId == null);

      // Delete: authenticated users only (for cleanup operations)
      allow delete: if request.auth != null;

      // Nodes subcollection - max 100 per capsule
      match /nodes/{nodeId} {
        allow read: if true;
        allow create: if request.resource.data.keys().hasAll(['id', 'type', 'position', 'data'])
                      && request.resource.data.data.keys().size() <= 10;
        allow update: if request.resource.data.keys().hasAll(['id', 'type', 'position', 'data']);
        // Delete: authenticated users only
        allow delete: if request.auth != null;
      }

      // Edges subcollection - max 200 per capsule
      match /edges/{edgeId} {
        allow read: if true;
        allow create: if request.resource.data.keys().hasAll(['id', 'source', 'target']);
        allow update: if request.resource.data.keys().hasAll(['id', 'source', 'target']);
        // Delete: authenticated users only
        allow delete: if request.auth != null;
      }
    }
  }
}
