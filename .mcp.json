{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/mcp-schema.json",
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp",
        "--browser", "chrome",
        "--user-data-dir", "/Users/christophercooper_1/.playwright-browsers/profiles/chrome"
      ],
      "description": "DEFAULT: Chrome with persistent profile for authenticated sessions"
    },
    "playwright-safari": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp",
        "--browser", "webkit"
      ],
      "description": "WebKit/Safari for iOS compatibility and rendering engine testing"
    },
    "playwright-firefox": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp",
        "--browser", "firefox"
      ],
      "description": "Firefox/Gecko for cross-browser rendering engine testing"
    },
    "playwright-comet": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp",
        "--browser", "chromium",
        "--executable-path", "/Applications/Comet.app/Contents/MacOS/Comet",
        "--user-data-dir", "/Users/christophercooper_1/.playwright-browsers/profiles/comet"
      ],
      "description": "EDGE CASE ONLY: Comet agentic browser - use by explicit request only, SSO will redirect to default browser"
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"]
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp"
    }
  }
}
