{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "hosting": {
    "site": "yellowcircle-app",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.zip",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/zip"
          },
          {
            "key": "Content-Disposition",
            "value": "attachment"
          }
        ]
      },
      {
        "source": "**/*.shortcut",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/octet-stream"
          },
          {
            "key": "Content-Disposition",
            "value": "attachment; filename=\"YellowCircle-LinkSaver.shortcut\""
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/generate",
        "function": "generate"
      },
      {
        "source": "/api/health",
        "function": "health"
      },
      {
        "source": "/api/sleepless",
        "function": "sleepless"
      },
      {
        "source": "/s/**",
        "function": "linkArchiverVanitySave"
      },
      {
        "source": "/api/shortcut",
        "function": "generateShortcut"
      },
      {
        "source": "!**/*.@(zip|shortcut|png|jpg|jpeg|gif|svg|ico|pdf|woff|woff2|ttf|eot)",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
